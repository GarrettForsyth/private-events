<h1>Create an Event</h1>

<%= form_for(:event, url: events_path) do |f|  %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description  %>
  <%= f.text_area :description %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.submit "Create Event" %>
<% end %>
